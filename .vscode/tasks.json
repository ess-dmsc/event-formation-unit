{
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "mkdir -p build && cd build && conan install .. --build=missing && cmake .. && make -j 20",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "cd build && make clean && cd .. && rm -Rf build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "BuildUnitTests",
            "command": "cd build && cmake .. && make -j 20 unit_tests",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "UnitTests",
            "command": "cd build && source ./activate_run.sh && make runtest && make runefu",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "BuildUnitTests"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run/Freia",
            "command": "cd build && source ./activate_run.sh && make efu freia && cd bin && ./efu -d ../modules/freia --nohwcheck",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
