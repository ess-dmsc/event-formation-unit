cxx=g++

include  = -I. -I..
warnings = -Werror -Wall -Wpedantic -Wextra -Wmissing-include-dirs
optflags = -O3

cxxflags = -std=c++11 $(optflags)  $(include) $(warnings)

ldflags = -L/usr/local/lib -lpthread -lrt -ldl
ldflags.so = -Wl,--whole-archive $(library) \
/usr/local/lib/librdkafka++.so /usr/local/lib/librdkafka.so \
-Wl,--no-whole-archive -fPIC -shared

ifdef PROF
cxxflags += -pg
ldflags += -pg
ldflags.so += -pg
endif

ifdef COV
cxxflags += -coverage
endif

Q=@
ifdef V
Q=
endif
